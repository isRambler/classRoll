.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.identify-logo{
  width: 60px;
}

.slogan{
  margin-top: 50px;
  display: flex;
  flex-direction:column; /* 子元素横向排列，默认横向
  /*align-items: center;     /* 子元素在交叉轴上的起点对齐（水平居中） */
  justify-content: center; /* 子元素在主轴上的起点对齐（垂直居中） */
  /*height: 100%;            /* 高度占满整个屏幕 */
}


.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.form-item text {
  margin-right: 10px;
}

.input {
  flex: 1;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 25px;
}

.radio-group {
  margin-top: 5px;
}

.auth-button {
  width: 100%;
  padding: 10px;
  background-color: #1AAD19; /* 微信绿 */
  color: white;
  border: none;
  border-radius: 4px;
}